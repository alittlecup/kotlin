<resources xmlns:tools="http://schemas.android.com/tools">


    <style name="Theme.CodeReader" parent="Theme.AppCompat.DayNight">
        <item name="android:windowBackground">@color/window_background_grey</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorControlNormal</item>
        <item name="colorControlHighlight">@color/colorControlNormal</item>

        <item name="android:textColorPrimary">@color/text_color_primary</item>
        <item name="android:textColorSecondary">@color/text_color_secondary</item>
        <item name="android:textColorTertiary">@color/text_color_tertiary</item>

        <item name="android:textColorHint">@color/text_color_hint</item>
        <item name="android:textSize">@dimen/text_size_xmedium</item>

        <item name="android:actionBarStyle">@style/Widget.Styled.ActionBar</item>
        <item name="actionBarStyle">@style/Widget.Styled.ActionBar</item>

        <item name="actionBarTheme">@style/Widget.Theme.ActionBar</item>
        <item name="android:actionBarTheme" tools:targetApi="lollipop">
            @style/Widget.Theme.ActionBar
        </item>

        <item name="toolbarStyle">@style/Widget.CodeReader.Toolbar</item>
    </style>

    <style name="Theme.CodeReader.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Widget.CodeReader.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="titleMargin">0dp</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
    </style>

    <style name="Widget.CodeReader.SearchView" parent="Widget.AppCompat.SearchView.ActionBar">
        <item name="layout">@layout/view_search</item>
    </style>

    <style name="Theme.CodeReader.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="Theme.CodeReader.Toolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="searchViewStyle">@style/Widget.CodeReader.SearchView</item>
    </style>

    <style name="Theme.CodeReader.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="ProgressLoadingTheme" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    <style name="Widget.Styled.ActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="android:colorControlNormal" tools:targetApi="lollipop">@android:color/white</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="titleTextStyle">@style/ActionBarTitleText</item>
    </style>

    <style name="Widget.Theme.ActionBar" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="android:colorControlNormal" tools:targetApi="lollipop">@android:color/white</item>
        <item name="colorControlNormal">@android:color/white</item>
    </style>

    <style name="ActionBarTitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TextAppearence.App.TextInputLayout" parent="TextAppearance.AppCompat">
        <item name="colorControlNormal">@color/colorAccent</item>
    </style>

    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="colorControlNormal">@color/color_divider</item>
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>

    <style name="AccentControlNormalStyle" parent="Theme.CodeReader">
        <item name="colorControlNormal">@color/colorAccent</item>
    </style>

    <style name="ListItemSettingTitleStyle">
        <item name="android:textColor">@color/text_color_primary</item>
        <item name="android:textSize">@dimen/text_size_xmedium</item>
    </style>

    <style name="ListItemSettingStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingRight">@dimen/medium_padding</item>
        <item name="android:paddingLeft">@dimen/medium_padding</item>
        <item name="android:paddingTop">@dimen/medium_padding</item>
        <item name="android:paddingBottom">@dimen/medium_padding</item>
        <item name="android:foreground">?selectableItemBackground</item>
        <item name="android:background">@color/item_background</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center_vertical</item>
    </style>
</resources>
